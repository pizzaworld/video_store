    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation' }
      .container
        .navbar-header
          = link_to "Video Store", root_path, class: "navbar-brand"


    .container
      = yield
